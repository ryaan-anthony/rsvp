
<% # TODO: remove stubs %>
<% @groups = [['Select a group', nil], "Angela's Family", "Ryans's Family"] %>
<% @filter_groups = [['Filter by group', nil], "Angela's Family", "Ryans's Family"] %>

<%= form_with url: guests_path, id: 'guests' do |form| %>
  <%= form.hidden_field :guests_data, value: @guests.to_json %>
<% end %>

<div class="row text-center border mb-3 p-3">
  <div class="col">
    <span class="NUM">2</span>
    <div class="LABEL">
      <span class="INNER">Invited</span>
    </div>
  </div>
  <div class="col">
    <span class="NUM">0</span>
    <div class="LABEL">
      <span class="INNER">Yes</span>
    </div>
  </div>
  <div class="col">
    <span class="NUM">0</span>
    <div class="LABEL">
      <span class="INNER">No</span>
    </div>
  </div>
</div>

<div class="container">
  <div class="float-start">
    <%= select_tag :group_filter, options_for_select(@filter_groups), class: 'form-control', onchange: 'filterByGroup()' %>
  </div>
  <div class="float-end">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#new_guest_form">Add guests</button>
  </div>
</div>

<table id="guest_list" class="table"></table>

<!-- Modal -->
<div class="modal fade" id="new_guest_form" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New Guest</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="mb-2">
          <%= select_tag :group, options_for_select(@groups), class: 'form-control'%>
        </div>
        <div class="row mb-2">
          <div class="col">
            <%= text_field_tag :first_name, nil, class: 'form-control', placeholder: "First Name", id: 'new-guest-name' %>
          </div>
          <div class="col">
            <%= text_field_tag :last_name, nil, class: 'form-control', placeholder: "Last Name" %>
          </div>
        </div>
        <div id="additional-guests" class="mb-2"></div>
        <%= button_tag 'Add plus one', class: 'btn btn-dark add btn-sm', type: :button, onclick: 'additionalGuest()' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="addRow()">Add to guest list</button>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'guests' %>
