<div class="form-container">
  <div class="form">
    <%= form_with url: "/login", method: :post do |form| %>
      <div class="mb-3">
        <h1><%= 'Celebrate with us!' %></h1>
      </div>
      <div class="mb-3">
        <%= form.text_field :passcode, class: 'form-control', placeholder: 'Passcode' %>
        <% flash.each do |type, message| %>
          <p class="required required-<%= type %>">
            <%= message %>
          </p>
        <% end %>
      </div>
      <div class="mb-3">
        <%= form.submit "Submit", class: 'btn btn-light' %>
      </div>
      <div class="mb-3">
        <p>
          <small>
            Forgot the passcode?
            <a href="mailto:us@angela-ryan.rsvp?subject=Passcode%20Request">Send us an email!</a>
          </small>
        </p>
      </div>
    <% end %>
  </div>
</div>
